{
  "name": "windows-system-optimizer",
  "version": "1.1.0",
  "description": "A comprehensive Windows 11 system optimization tool with enhanced bloatware detection, modern UI and powerful cleanup capabilities",
  "main": "main.js",
  "author": "System Optimizer Team",
  "license": "MIT",
  "keywords": [
    "windows",
    "optimizer",
    "cleaner",
    "system",
    "utility"
  ],
  "homepage": "https://github.com/drdeeks/windows-system-optimizer",
  "repository": {
    "type": "git",
    "url": "https://github.com/drdeeks/windows-system-optimizer.git"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-simple": "electron-packager . windows-system-optimizer --platform=win32 --arch=x64 --out=build/ --overwrite",
    "dist": "npm run build-simple",
    "pack": "electron-builder --dir",
    "package-win": "electron-packager . windows-system-optimizer --platform=win32 --arch=x64 --out=build/ --overwrite --ignore=node_modules/electron-packager --ignore=build",
    "make-exe": "npm run package-win",
    "postinstall": "electron-builder install-app-deps",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "devDependencies": {
    "electron": "^27.1.3",
    "electron-builder": "^24.6.4",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "electron-log": "^5.0.1",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.1.4"
  },
  "build": {
    "appId": "com.systemoptimizer.windows",
    "productName": "Windows System Optimizer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.map",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],

    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "requireAdministrator",
      "verifyUpdateCodeSignature": false
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "afterSign": null,
    "forceCodeSigning": false
  }
}
